                    ],
                    "properties": {
                        "name": {
                            "bsonType": "string",
                            "description": "must be a string and is required"
                        },
                        "email": {
                            "bsonType": "string",
                            "pattern": "^\\w+@[a-zA-Z_]+?\\.[a-zA-Z]{2,3}$",
